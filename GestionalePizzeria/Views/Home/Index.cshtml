@model IEnumerable<GestionalePizzeria.Models.Pizze>

@{
    ViewBag.Title = "Index";
}

<h2>Menù</h2>



<div class="container d-flex justify-content-between align-items-center flex-wrap">

    @foreach (var item in Model)
    {
        

        <div class="card flex-column justify-content-between mt-3" style="width: 18rem; height: 20rem">
            <div>
                <img class="card-img-top" src="~/Content/img/@Html.DisplayFor(modelItem => item.Foto)" alt="Card image cap" width="200" height="150">
            </div>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Ingredienti)</p>
            </div>
            <div class="p-2">
                @Html.ActionLink("Dettagli", "Details", "Pizze", new { id = item.IdPizza }, new { @class = "btn btn-primary" })
            </div>
        </div>
       
    }
    </div>


