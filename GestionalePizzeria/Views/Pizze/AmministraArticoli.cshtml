@model IEnumerable<GestionalePizzeria.Models.Pizze>

@{
    ViewBag.Title = "AmministraArticoli";
}

<nav class="bg-black py-3">
    <ul class="d-flex justify-content-center">
        <li class="me-3 text-white list-unstyled">
            @Html.ActionLink("Gestisci Articoli", "AmministraArticoli", "Pizze")
        </li>
        <li class="me-3 text-white list-unstyled">
            @Html.ActionLink("Gestisci Ordini Confermati", "AmministraOrdini", "Ordini")
        </li>
        <li class="me-3 text-white list-unstyled">
            @Html.ActionLink("Riepilogo", "Riepilogo", "Ordini")
        </li>
    </ul>
</nav>
<div class="btn-amm-art mb-3">
    @Html.ActionLink("Crea Nuovo", "Create")
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TempoPreparazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredienti)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Foto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezzo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TempoPreparazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredienti)
        </td>
        <td class="btn-amm-art">
            
            @Html.ActionLink("Modifica", "Edit", new { id = item.IdPizza }) |
            @Html.ActionLink("Cancella", "Delete", new { id = item.IdPizza })
        </td>
    </tr>
}

</table>

